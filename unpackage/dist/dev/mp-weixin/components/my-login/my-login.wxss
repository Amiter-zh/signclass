/* 水平间距 */
.login-container {
  height: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  position: relative;
  overflow: hidden;
}
.login-container image {
  padding-top: 50rpx;
  width: 50%;
  height: 50%;
  border-radius: 50%;
}
.login-container .btn-login {
  width: 90%;
  border-radius: 100px;
  margin: 15px 0;
  background-color: #0fca5d;
}
.login-container .tips-text {
  font-size: 12px;
  color: gray;
}

